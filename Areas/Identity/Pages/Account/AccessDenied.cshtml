@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acesso Negado";
}

<div class="container">
    <header>
        <h1>@ViewData["Title"]</h1>
        <p>Você não tem acesso a este recurso.</p>
    </header>

    <div class="alert">
        <p>Desculpe, mas você não tem permissão para acessar esta página.</p>
        <button onclick="window.location.href='/'">Voltar para a página inicial</button>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #B0E0E6;
        margin: 0;
        padding: 0;
    }

    /* Estilo do título */
    header h1 {
        color: #dc3545; 
        font-size: 3rem;
        font-weight: bold;
        text-align: center;
        margin-top: 5rem;
    }

    /* Estilo da mensagem de erro */
    header p {
        color: #dc3545;
        font-size: 1.25rem;
        text-align: center;
        margin-top: 1rem;
    }

    /* Caixa de alerta centralizada */
    .alert {
        width: 80%;
        max-width: 600px;
        margin: 3rem auto;
        padding: 2rem;
        border-radius: 8px;
        background-color: #E0FFFF;
        border: 1px solid #E0FFFF;
        color: #721c24; 
    }

    /* Botão de voltar ao início */
    .alert button {
        display: block;
        width: 100%;
        background-color: darkred;
        color: white;
        padding: 0.75rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
    }

    .alert button:hover {
        background-color: darkred;
    }
</style>