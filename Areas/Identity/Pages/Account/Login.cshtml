@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <section>
                <form id="account" method="post">
                    <h2>Use a local account to log in</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="btn btn-primary">Conecte-se</button>
                    </div>

                    <div>
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registre-se como um novo usuário</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmação por e-mail</a></p>
                    </div>
                </form>
            </section>
        </div>

        <div class="col-md-6 mt-4 mt-md-0">
            <section>
                <h3>Use outro serviço para fazer login</h3>
                <hr />
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            Não há serviços de autenticação externa configurados. Veja este <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                artigo
                                sobre como configurar este aplicativo ASP.NET para dar suporte ao login por meio de serviços externos
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                            }
                        </p>
                    </form>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #B0E0E6;
        margin: 0;
        padding: 0;
    }

    /* Centralizar a página de login */
    .container {
        margin-top: 5rem;
    }

    h1 {
        color: black;
        font-weight: bold;
        text-align: center;
    }

    /* Estilizando o formulário */
    form {
        background-color: #E0FFFF;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Estilo do título do formulário */
    form h2 {
             color: #343a40;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            text-align: center;
        }

    hr {
        border: 1px solid #007bff;
        width: 50%;
        margin: 1rem auto;
    }

    /* Estilo dos campos de input */
    .form-floating {
        margin-bottom: 1.25rem;
    }

        .form-floating input {
            border-radius: 8px;
            border: 1px solid #E0FFFF;
            padding: 12px;
            font-size: 1rem;
            width: 100%;
        }

        .form-floating label {
            font-weight: 600;
        }

    /* Botões */
    button#login-submit {
        background-color: #007bff;
        color: white;
        padding: 12px;
        width: 100%;
        border-radius: 8px;
        font-size: 1.1rem;
        border: none;
        cursor: pointer;
    }

        button#login-submit:hover {
            background-color: #0056b3;
        }

    button.btn-primary {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 8px;
        margin: 5px;
    }

        button.btn-primary:hover {
            background-color: #0056b3;
        }

    /* Estilizando as mensagens de erro */
    .text-danger {
        font-size: 0.875rem;
    }

    /* Estilo de links */
    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Seção de autenticação externa */
    section {
        background-color: #E0FFFF;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-top: 3rem;
    }

        section h3 {
            text-align: center;
            color: #343a40;
        }

        section a {
            display: block;
            text-align: center;
            font-size: 1rem;
            margin-top: 1rem;
        }
</style>
